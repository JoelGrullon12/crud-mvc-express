<div class="row">
    <div class="d-flex justify-content-between">
        <h2>Listado de peliculas</h2>
        <a href="/add" class="btn btn-outline-success">Agregar</a>
    </div>
</div>
<div class=" mt-3 row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

    {{#each movies as |mov|}}
    <div class="col">
        <div class="card {{movieActive mov.active 1}}">
            <div class="card-body">
                <h4 class="card-title {{movieActive mov.active 2}}">{{mov.name}}</h4>
                <div class="row">
                    <p class="m-0">{{mov.desc}}</p>
                    <small class="fw-bold mt-1 {{movieActive mov.active 2}}">{{setType mov.type}}</small>
                </div>

                <div class="btn-group btn-group-sm float-end mt-3" role="group" aria-label="Basic example">
                    <a href="/edit/{{mov.id}}" class="btn btn-outline-primary">Editar</a>
                    <a href="/delete/{{mov.id}}" class="btn btn-outline-danger">Eliminar</a>
                </div>
            </div>
        </div>
    </div>
{{/each}}
</div>