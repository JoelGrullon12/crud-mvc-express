<div class="row">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title mb-3">Agregar nueva pelicula</h3>
                <form action="/add" method="post">
                    <div class="mb-3">
                        <label for="txtName" class="form-label">Nombre de la Pelicula</label>
                        <input type="text" class="form-control" name="name" id="txtName" required>
                    </div>
                    <div class="form-floating mb-3">
                        <textarea class="form-control" style="height:150px;" name="desc" required></textarea>
                        <label>Descripcion</label>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="slcGenero">Genero</label>
                        <select name="type" id="slcGenero" class="form-select mb-3">
                            <option value="1">Accion</option>
                            <option value="2">Terror</option>
                            <option value="3">Comedia</option>
                            <option value="4">Suspenso</option>
                            <option value="5">Documentales</option>
                        </select>
                    </div>

                    <div class="d-flex flex-row-reverse">
                        <input class="btn btn-outline-primary ms-2" type="submit" value="Guardar">
                        <a href="/" class="btn btn-outline-secondary">Atras</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>